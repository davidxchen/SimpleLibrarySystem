@model IEnumerable<BookViewModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Simple Library System</h1>
    <p class="lead">This is a very simple library system.</p>
</div>

<div class="row">
    @foreach(var book in Model)
    {
    <div class="col-md-4">
        <h2>@book.BookName</h2>
        <img src="@Url.Action("Cover", "Book", new { id = book.ISBN })" rel="@book.BookName" width="100" />
        <p>@book.Description</p>
        <p><a class="btn btn-default" href="@Url.Action("Detail", "Book", new { id = book.ISBN })">Learn more &raquo;</a></p>
    </div>
    }
</div>