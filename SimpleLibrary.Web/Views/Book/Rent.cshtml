@model BookViewModel

@{
    ViewBag.Title = "Rent";
}

<h2>Rent</h2>

<h3>Are you sure you want to rent this book? </h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BookName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BookName)
        </dd>
    </dl>
    @using (Html.BeginForm(new { id = Model.ISBN }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (Model.Status != SimpleLibrary.Common.Enums.BookStatus.Rent)
            {
                <input type="submit" value="Rent" class="btn btn-warning" />
            }
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>