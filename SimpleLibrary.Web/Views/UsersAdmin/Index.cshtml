@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                @if (item.UserName != User.Identity.Name)
                {
                    if (item.LockoutEndDateUtc.HasValue && item.LockoutEndDateUtc.Value > DateTime.Now)
                    {
                        @Html.ActionLink("Unlock", "Unlock", new { id = item.Id }, new { @class = "btn btn-info" })
                    }
                    else
                    {
                        @Html.ActionLink("Lock", "Lock", new { id = item.Id }, new { @class = "btn btn-warning" })
                    }
                }
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
